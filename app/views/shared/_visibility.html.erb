<!-- expects a local variable called 'f' which is the form object -->
<!-- expects that the model which the form refers to is implementing the Concerns::OwnersConcern -->
<% if f.object.respond_to? :show_visibility_selection %>
	<% if f.object.show_visibility_selection %>
		<%= f.select :public , [["My Organization",Concerns::OwnersConcern::IS_PRIVATE.to_s],["Anyone",Concerns::OwnersConcern::IS_PUBLIC.to_s]], {include_blank: "Viewership restricted to", disabled: '', selected: ''} %>
	<% else %>
		<!-- nothing -->
	<% end %>
<% else %>
	<%= f.select :public , [["My Organization",Concerns::OwnersConcern::IS_PRIVATE.to_s],["Anyone",Concerns::OwnersConcern::IS_PUBLIC.to_s]], {include_blank: "Viewership restricted to", disabled: '', selected: ''} %>
<% end %>