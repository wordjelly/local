<div class="container">
	<div class="row">
		<div class="col s12 m12 l12">
		  <div class="card blue-grey darken-1">
		    <div class="card-content white-text">
		      <p><span class="card-title">Welcome to <%= ENV["LIS_NAME"] %>!</span></p>
		      <p>To confirm your account, please click on the confirm button below</p>
		      <a class="waves-effect waves-light btn" href="<%= confirmation_url(@resource, confirmation_token: @token) %>"></a>
		    </div>
		    <div class="card-action">
		      <a href="#">Report</a>
		      <a href="#">Unsubscribe</a>
		    </div>
		  </div>
		</div>
	</div>
</div>
