	<p>
      <label>
        <input name="patient[heart_problems]" type="radio" checked />
        <span>No</span>
      </label>
    </p>
    <p>
      <label>
        <input name="patient[heart_problems]" type="radio" />
        <span>Yes</span>
      </label>
    </p>

	<%= f.submit "Submit" %>

