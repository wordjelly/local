  <%= csrf_meta_tags %>

  <%= javascript_include_tag  "https://widget.cloudinary.com/global/all.js" %>

  <%= cloudinary_js_config %>

</head>

<body>


<% content_for :nav_links do %>
    
<% end %>

<!-- from creation to adding users, to etc etc -->
<!-- protection of search -->

<%= render :partial => "layouts/auth/navbar/navbar.html.erb" %>

<div class="container">
  <!-- uses a helper method to determine the name of the partial to be shown -->
  <!-- does it use the -->
  
  <%= render :partial => "/navigation/#{get_navigation_partial_name(current_user)}" %>
  <%= render :partial => "search/search" %>
  <!-- expects an instance variable called @errors[OPTIONAL] -->
  <%= render :partial => "/shared/errors" %>
  <!-- expects an instance variable called @alert[OPTIONAL] -->
  <%= render :partial => "/shared/alert" %>
  <!-- expects an instance variable called @images[OPTIONAL] -->
  <!-- earlier had rendered a partial called /images/index -->
  <!-- this can be shown on edit only, inside the relevant thing -->
  <!-- so i will add it there -->
  <!-- we can have doctors, that can be done in profile -->
  <%= yield %>
</div>

<%= render :partial => "layouts/footer" %>

<!-- for the sign in modals -->
<%= render :partial => "layouts/auth/modals.html.erb" %>

</body>
</html>


