<% if order.organization.generate_report_summary == Organization::YES %>
	<%= render :partial => "/business/orders/report_summary" %>
<% end %>
<!-- if the format is the same or not, and if the organization is the same or not -->
<% signing_organization = get_signing_organization(reports) %>

<% reports.each do |report| %>
	<%= render :partial => "/diagnostics/reports/pdf/show", locals: {order: order, organization: organization} %>
	
	<% if signing_organization.signature_after_every_report == Organization::YES %>
		<% reports.final_signatories.each_slice(3) do |slice| %>
			<div class="signatures row">
				<% slice.each do |user_id| %>
					<%= render :partial => "/diagnostics/reports/signatures", locals: {user: order.users_hash[user_id]} %>
				<% end %>
			</div>
		<% end %>
	<% end %>	
	<% if signing_organization.each_report_on_new_page == Organization::YES %>
		<%= render :partial => "/layouts/pdf/page_break" %>
	<% end %>
<% end %>
<% if signing_organization.signature_after_every_report == Organization::NO %>
		<% reports.map{|c| c.final_signatories}.uniq.each_slice(3) do |slice| %>
			<div class="signatures row">
				<% slice.each do |user_id| %>
					<%= render :partial => "/diagnostics/reports/signatures", locals: {user: order.users_hash[user_id]} %>
				<% end %>
			</div>
		<% end %>
<% end %>
