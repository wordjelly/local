<div class="card">
  <div class="card-content">
    <div class="card-title">
    </div>
      <table>
              <thead>
                <tr>
                    <th>Name</th>
                    <th>Priority</th>
                    <th>Reports</th>
                    <th>Options</th>
                </tr>
              </thead>

              <tbody>
                <% @statuses.each_with_index {|nr,key| %>
              	 <% @status = nr %>
                 <!-- how to display the priority -->
                 <%= render :partial => "statuses/show", locals: {status: @status} %>
                <% } %>
              </tbody>
      </table>
  </div>
</div>
<!-- this page has to allow us to add statuses -->
<!-- and also select levels where we can add reports -->
<!-- also modify the priorities of the statuses -->