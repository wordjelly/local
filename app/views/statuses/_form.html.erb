<%= form_for @status do |f| %>
	
	<!-- this will come from a drop down ? -->
	<%= f.text_field :name %>
	<%= f.label :name %>

	<%= f.text_field :parent_id, disabled: true %>
	<%= f.label :parent_id %>

	<%= f.text_field :report_id, disabled: true %>
	<%= f.label :report_id %>

	<%= f.text_field :item_id, disabled: true %>
	<%= f.label :item_id %>

	<%= f.text_field :item_group_id, disabled: true %>
	<%= f.label :item_group_id %>

	<%= f.text_field :order_id, disabled: true %>
	<%= f.label :order_id %>

	<%= f.text_field :patient_id, disabled: true %>
	<%= f.label :patient_id %>

	<!-- so all you have to do is define its information keys, which can be a attr_accessor, depending on where it is being called from -->
	<% @status.information_keys.each do |ikey| %>

		<input type="text" name="status[info][<%= ikey %>]" val="<%= @status.information_keys[ikey] %>" />

	<% end %>

	<!-- so in the order we can have different payment options -->
	<!-- so make payment, enter the amount -->


	<%= f.submit "Submit" %>

<% end %>