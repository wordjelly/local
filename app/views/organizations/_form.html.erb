<%= form_for @organization, as: :organization, method: @organization.new_record? ? :post : :put do |f| %>
	
	<%= render :partial => "/shared/visibility", locals: {f: f} %>
		
	<%= build_nested_form(@organization).html_safe %>	

	<!-- specific for the organization to decide on the pending users -->
	<!-- to show the pending users and delete them if required -->
	<%= render :partial => "/organizations/users_pending_approval_form_partial" %>

	<%= f.submit "Submit" %>

<% end %>